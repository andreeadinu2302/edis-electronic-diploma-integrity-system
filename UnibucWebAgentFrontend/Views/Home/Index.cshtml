@model UnibucWebAgentFrontend.Models.ServerStatusResponse
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/img/logo_unibuc.png" height="100" width="120" />
    <h1 class="display-4">University of Bucharest</h1>
    <p>A self soverign identity with Verifiable Credentials Demo</p>
    <br />
    <div class="alert alert-info text-center w-50 mx-auto" role="alert">
        <h4 class="alert-heading">Cloud Wallet</h4>
        <hr>
        <p class="mb-0">Status: Online</p>
        <p class="mb-0">Public DID: KRC4bP85VXPGB85UUvp2yz</p>
        <p class="mb-0">Wallet Endpoint: @Model.Configuration.Endpoint</p>
        <p class="mb-0">Credential revocation Endpoint: @Model.Configuration.RevocationEndpoint</p>
        <p class="mb-0">Ledger genesis: @Model.Configuration.Ledger</p>
    </div>
    <br />
    <div class="row mb-3">
        <div class="col-xl-4 col-sm-6 py-2">
            <a asp-action="Connections" asp-controller="Home" style="text-decoration:none">
                <div class="card bg-light text-dark h-100">
                    <div class="card-body bg-light">
                        <div class="rotate">
                            <i class="fa fa-link fa-3x"></i>
                        </div>
                        <h6 class="text-uppercase">Student Connections</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-4 col-sm-6 py-2">
            <a asp-action="Issue" asp-controller="Home" style="text-decoration:none">
                <div class="card text-dark bg-light h-100">
                    <div class="card-body bg-light">
                        <div class="rotate">
                            <i class="fa fa-id-card fa-3x"></i>
                        </div>
                        <h6 class="text-uppercase">Issue a credential</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-4 col-sm-6 py-2">
            <a href="https://mock20210819081700.azurewebsites.net" target="_blank" style="text-decoration:none">
                <div class="card text-dark bg-light h-100">
                    <div class="card-body bg-light">
                        <div class="rotate">
                            <i class="fa fa-user-check fa-3x"></i>
                        </div>
                        <h6 class="text-uppercase">Request a proof</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
