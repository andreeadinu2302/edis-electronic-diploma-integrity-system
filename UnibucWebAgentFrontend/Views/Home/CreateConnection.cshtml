@model Byte[]
@{
    ViewData["Title"] = "Create a new connection";
}
<h1>@ViewData["Title"]</h1>

<h4>Scan this QR Code with a mobile wallet to connect with Unibuc</h4>

@if (Model != null)
{
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" height="300" width="300" />
            </div>
        </div>
    </div>
} 